<li id="<%= dom_id task %>" data-controller="tasks" class="py-2 <%= 'line-through text-gray-200' if task.completed %>">
  <%= form_with(model: [task.list, task], class: "flex") do |form| %>
    <%= form.check_box :completed, class: "mr-2", data: { action: "change->tasks#toggle" } %>
    <%= form.text_field :description, class: "task-description-field hidden", data: { action: "keydown.esc->tasks#submit_edit", action: "blur->tasks#blur" } %>
    <%= link_to task.description, "#", class: "task-description-link", data: { action: "click->tasks#edit" } %>
  <% end %>
</li>
