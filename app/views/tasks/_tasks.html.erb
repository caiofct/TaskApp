<div class="mt-3">
  <%= link_to "+ Add Task", new_list_task_path(list), class: "text-indigo-500 hover:text-indigo-800", data: { turbo_stream: "" } %>
</div>
<ul id="tasks-<%=list.id%>" class="min-w-full mt-5">
  <% if tasks.any? %>
    <%= render tasks %>
  <% else %>
    <p class="text-center my-10">No tasks found.</p>
  <% end %>
</ul>
