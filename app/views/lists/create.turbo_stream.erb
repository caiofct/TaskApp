<%= turbo_stream.prepend :lists do %>
  <%= render @list, active_list: @list, new_list: true %>
<% end %>

<%= turbo_stream.replace :tasks do %>
  <%= turbo_frame_tag :tasks, refresh: :morph, data: { "turbo-action": "advance" } do %>
    <%= render "lists/add_task", list: @list %>
    <%= render "tasks/tasks", list: @list, tasks: @list.tasks %>
  <% end %>
<% end %>
